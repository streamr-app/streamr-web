.stream-card
  position relative
  color black
  transition all 0.3s ease

  p
    margin 4px 0

  .thumbnail-wrapper
    border-radius 3px
    overflow hidden
    position relative

    img
      width 100%

  .duration
    position absolute
    bottom 3px
    right 3px
    color rgba(255, 255, 255, 0.6)
    margin 0
    font-size 0.7em

  .title
    margin-top 10px
    font-weight 400
    color black
    font-size 1.1em

  .author
    color #aaa

  &:hover
    transform scale(1.03)

    .title
      text-decoration underline

  .author
    font-size 0.8em

  &.horizontal
    display block
    width 100%
    display flex
    align-items center
