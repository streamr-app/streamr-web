.stream-card
  position relative

  .thumbnail-wrapper
    border-radius 3px
    overflow hidden
    img
      width 100%

  .information-wrapper
    .title
      font-weight 400
      font-size 0.9rem

    .description
      font-size 0.7rem
      color $light-gray
      overflow hidden
      text-overflow ellipsis // this ellipsis won't work for some reason
      line-height 0.7rem
      max-height 1.4rem // line-height * #-lines

    .author
      font-size 0.65rem

  &.horizontal
    display block
    width 100%
    clear both
    overflow hidden

    .thumbnail-wrapper
      float left
      display inline-block
      width 33%

    .information-wrapper
      float left
      display inline-block
      position absolute
      top 5px
      margin-left 15px

      .title
        font-size 1.3rem
      .description
        font-size 1.0rem
        line-height 1.0rem
        max-height 2.0rem
        margin-top 8px
