.color-palette-picker
  input[type='radio']
    display none

  .radio-field
    margin-bottom 10px
    padding 10px
    transition all 0.2s ease
    border 1px solid transparent
    border-radius 5px

    label
      color #555

    &.checked
      background #f2f7fb
      border 1px solid $blue

      label
        color $blue

    &:hover, &.checked
      .color-well
        transform scale(1.1)

.color-wells
  display flex
  justify-content center
  margin 10px 0 0 0
  background rgb(33, 37, 43)
  padding 20px
  border-radius 3px

  .color-well
    width 40px
    height 40px
    margin-right 10px
    border-radius 50%
    transition transform 0.2s ease
