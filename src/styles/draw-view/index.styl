.draw-view
  position relative
  background rgb(33, 37, 43)

  .color-picker
    position absolute
    top 0
    bottom 0
    padding 0 20px
    display flex
    flex-direction column
    justify-content center
    opacity 0.4
    transition opacity 0.2s ease
    pointer-events none
    z-index 3

    &.visible
      pointer-events all !important

    &:hover
      opacity 1

.mouse-drawing-handler
  user-select none
  cursor crosshair
  top 0px
  height 100%
  position absolute
  z-index 2

  &, svg
    width 100vw
    height (100 * 1080/1920)vw

  .click-zone
    position absolute
    top 0
    left 0
    height 100%
    width 100%

    svg
      pointer-events none
