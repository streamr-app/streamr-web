.button
  display inline-block
  padding 10px 0
  min-width 200px
  margin 5px 0
  width 100%
  border-radius 2px
  cursor pointer
  text-align center
  font-weight 600
  color white
  background $button-color
  transition all 0.15s ease
  user-select none
  appearance none
  border none

  &:active, &:focus
    background darken($button-color, 10%)

  &:focus
    outline 0
    transform scale(1.03)
    box-shadow $active-field-box-shadow
