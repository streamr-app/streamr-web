.user-card
  display flex
  align-items center

  .profile-image
    flex-shrink 0
    margin-right 10px

  a.profile-link
    font-weight 500
    color black
    border-bottom 1px solid transparent
    transition all 0.3s ease

  &:hover a.profile-link
      border-color #ccc

  p
    margin 5px 0

  .bio
    font-size 0.8em
