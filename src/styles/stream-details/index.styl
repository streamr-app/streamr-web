.stream-details
  display flex
  align-items center
  margin 20px 0

  .basic-info
    margin-right 40px

  h1
    margin 0

  h4
    margin 0
    display inline-block
    color white
    background-color $blue
    border-radius 3px
    padding 2px 6px

  p
    line-height 1.5
    font-size 0.8em
    text-align justify

  > div:first-child
    flex 3

  > div:last-child
    flex 2
