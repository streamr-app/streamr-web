.recording-error, .recording-notice
  opacity 0
  pointer-events none
  transform-style preserve-3d
  perspective 2000px
  transition all 500ms ease
  background rgba(33, 37, 43, 0.9)

  .error, .notice
    color rgba(255, 255, 255, 0.4)
    text-align center
    border 1px solid
    padding 15px
    border-radius 5px
    line-height 1.5

  .error
    border-color $red
    color white

  &.long > div
    text-align left

  p
    margin 0
    margin-bottom 20px

    &:last-child
      margin-bottom 0

  &.visible
    opacity 1

  .error-enter
    transform rotateX(-45deg) translateY(50px)

  .error-enter.error-enter-active
    transition all 500ms cubic-bezier(0.165, 0.84, 0.44, 1)
    transform rotateX(0deg) translateY(0px)
