.field.errors
  position relative

.field-errors
  position absolute
  top 100%
  left 10px

  padding 0
  margin 0

  .field-error
    color white
    background $error-color
    display inline-block
    margin-right 10px
    padding 4px 8px
    font-size 0.8em
    border-radius 0 0 3px 3px
    box-shadow 0px 1px 2px rgba(0, 0, 0, 0.1)
