.text-field
  label
    display block
    margin-bottom 4px

  > input
    font inherit
    box-sizing border-box
    width 100%
    padding 11px 10px
    border-radius 3px
    border 1px solid #D5D5D5
    outline 0
    transition all 0.2s ease
    box-shadow $field-box-shadow

    &:focus
      box-shadow $active-field-box-shadow
      border-color $active-field-color

  &.errors input
    border-color $error-color

    &:focus
      box-shadow $error-active-field-box-shadow
