.stream-player
  background rgb(33, 37, 43)
  border-radius 5px
  position relative
  overflow hidden

  .playback-controls
    perspective 5000px
    position absolute
    bottom 0
    width auto
    left 0
    right 0
    transition all 0.3s ease
    transform translateY(0px) scale(0.96) rotateX(-90deg)
    opacity 0

  &.paused .playback-controls, &:hover .playback-controls
    transform translateY(0px) scale(1) rotateX(0deg)
    opacity 1
