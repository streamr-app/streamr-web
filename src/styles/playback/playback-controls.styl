.playback-controls
  user-select none

  .flip-container
    display flex
    align-items stretch

  a
    cursor pointer
    display flex
    align-items center
    padding 0 15px
    transition all 0.2s ease
    box-sizing border-box

    &.play-pause
      margin-right 10px

    &.fullscreen
      margin-left 10px

    &:hover
      transform scale(1.1)

    img
      display block

  .progress
    position relative
    height 40px
    flex 1
    color white
    cursor pointer
    margin-right 10px

    .current-progress, .duration
      position absolute
      bottom 24px
      font-size 0.6em

    .current-progress
      left 0

    .duration
      right 0

    .progress-backing, .progress-filler
      position absolute
      top 19px
      height 2px
      width 100%
      border-radius 2px

    .progress-backing
      background rgba(255, 255, 255, 0.2)

    .progress-filler
      background white

      &:after
        position absolute
        top -3px
        right -3px
        width 8px
        height 8px
        border-radius 50%
        display block
        background white
        content: ' '

.container.loading .playback-controls
  &, a, .progress
    cursor not-allowed
