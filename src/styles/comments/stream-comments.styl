.stream-comments
  max-width 600px
  margin 0 auto
  padding 20px 0

  .comment-form
    margin-bottom 20px

  .comment
    margin-bottom 30px
    border-radius 5px

  .body
    line-height 1.2

  .none
    text-align center

.comment-enter
    opacity 0
    max-height 0
    transform scale(0.95)

.comment-enter.comment-enter-active
    opacity 1
    max-height 500px
    transform scale(1)
    transition all 200ms ease-in-out
